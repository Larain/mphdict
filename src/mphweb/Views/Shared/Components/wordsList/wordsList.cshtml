@using mphdict.Models.morph
@model mphweb.Models.dictParams

<div id="search-block">
    <input type="text" placeholder="введіть слово для пошуку..." />
    <button class="btn"></button>
</div>
<ul id="portrait-display-type">
    <li id="list-view" class="active-sel-tab">
        <a href="#">Реєстр</a>
    </li>
    <li id="entry-view">
        <a href="#">Стаття</a>
    </li>
</ul>
<div id="words-list">
    @foreach (var item in Model.page) { 
        <a asp-action="Index" asp-controller="inflection"
           asp-route-id="@item.nom_old" asp-route-currentPage="@Model.incp.currentPage" asp-route-wordSearch="@Model.incp.wordSearch"
           asp-route-fetchType="@Model.f.fetchType" asp-route-str="@Model.f.str" asp-route-isStrFiltering="@Model.f.isStrFiltering" asp-route-isInverse="@Model.f.isInverse"
           asp-fragment="@($"wid-{item.nom_old}")"
           class="@(item.nom_old==Model.incp.id? "selected-word":"")" id="@($"wid-{item.nom_old}")">
            @item.reestr.Replace('\"', '\x301')
            @if (item.field2 > 0)
            {
                <sup>@item.field2</sup>
            }
        </a>
    }
</div>
<form asp-action="toPage" asp-controller="inflection" method="get">
    <div id="list-control">
        <a asp-action="toPrev" asp-controller="inflection"
           asp-route-id="@Model.incp.id" asp-route-currentPage="@Model.incp.currentPage" asp-route-wordSearch="@Model.incp.wordSearch"
           asp-route-fetchType="@Model.f.fetchType" asp-route-str="@Model.f.str" asp-route-isStrFiltering="@Model.f.isStrFiltering" asp-route-isInverse="@Model.f.isInverse"
           class="btn @(Model.incp.currentPage==0?"disable-nav":"")">‹</a>


        <input type="number" name="@nameof(Model.incp.currentPage)" value="@(Model.incp.currentPage+1)" />
        <input type="hidden" asp-for="@Model.incp.wordSearch" />
        <input type="hidden" asp-for="@Model.incp.id" />
        <input type="hidden" asp-for="@Model.f.isStrFiltering" />
        <input type="hidden" asp-for="@Model.f.isInverse" />
        <input type="hidden" asp-for="@Model.f.str" />
        <input type="hidden" asp-for="@Model.f.fetchType" />
        <div id="page-number">&nbsp;з&nbsp;</div>
        <a id="last-page" asp-action="Index" asp-controller="inflection"
           asp-route-id="@Model.incp.id" asp-route-currentPage="@(Model.maxpage-1)" asp-route-wordSearch="@Model.incp.wordSearch"
           asp-route-fetchType="@Model.f.fetchType" asp-route-str="@Model.f.str" asp-route-isStrFiltering="@Model.f.isStrFiltering" asp-route-isInverse="@Model.f.isInverse">@(Model.maxpage + 1)</a>
        <button class="btn"></button>

        <a asp-action="toNext" asp-controller="inflection"
           asp-route-id="@Model.incp.id" asp-route-currentPage="@Model.incp.currentPage" asp-route-wordSearch="@Model.incp.wordSearch"
           asp-route-fetchType="@Model.f.fetchType" asp-route-str="@Model.f.str" asp-route-isStrFiltering="@Model.f.isStrFiltering" asp-route-isInverse="@Model.f.isInverse"
           class="btn @(Model.incp.currentPage==Model.maxpage?"disable-nav":"")">›</a>
    </div>
</form>