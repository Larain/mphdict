<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - mphweb</title>
    <environment names="Development">
        <link rel="stylesheet" href="~/css/reset.css">
        <link rel="stylesheet" href="~/css/font-awesome.css">
        <link rel="stylesheet" href="~/css/style.css">
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/style.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    @{var d = (mphweb.Models.dictParams)ViewBag.dp;}
    <div id="wrapper">
        <header>
            <div id="goto_main">

            </div>
            <div id="main-name">
                <div>Лексикографічне надбання України</div>
                <div><a href="https://github.com/LinguisticAndInformationSystems/mphdict" target="_blank">Граматичний словник української мови</a></div>
            </div>
            <div id="main-info">
                <div>Copyright © 2016 <a href="mailto:uSofTrod@outlook.com">uSofTrod</a> </div>
                <div><a href="http://opensource.org/licenses/MIT" target="_blank">The MIT License</a> </div>
            </div>
            <div id="logoff">
                <a href="#iworking" title="Вихід"></a>
            </div>
        </header>
        
       @{await Html.RenderPartialAsync("_MainControlPanel", d);}
        
        <main>
            <nav>
                @switch ((viewtype)ViewBag.vtype) {
                    case viewtype.dict:
                        await Html.RenderPartialAsync("_navDictionary", d);
                        break;
                    case viewtype.pclass:
                        await Html.RenderPartialAsync("_navPClass", (mphdict.Models.morph.indents_base[])ViewBag.indents);
                        break;

                }
            </nav>
            <article>
                <header></header>
                <section>
                    @RenderBody()
                </section>
                <footer></footer>
            </article>
            <aside></aside>
        </main>
        <footer id="mainfooter"></footer>
    </div>

    <environment names="Development">
        @*<script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>*@
    </environment>
    <environment names="Staging,Production">
        @*<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>*@
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
